CREATE TABLE IF NOT EXISTS Task (
  id INTEGER PRIMARY KEY AUTOINCREMENT,
  name TEXT NOT NULL,
  total_duration INTEGER NOT NULL DEFAULT 0
);

selectAll:
SELECT *
FROM Task;

insert:
INSERT INTO Task(name)
VALUES (?);

deleteByName:
DELETE FROM Task
WHERE name = ?;

setTotalDuration:
UPDATE Task
SET total_duration = ?
WHERE name = ?;
